<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#ffffff"
tools:context="com.example.svarog.project01.activity.LoginPayPal">

    <TextView
        android:id="@+id/tv_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_Username"
        android:layout_alignBottom="@+id/et_Username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:textColor="#000000"
        android:layout_marginStart="18dp"
        android:textSize="18dp"
        android:text="Username:"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_Password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:ems="10">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_Username"
        android:layout_alignRight="@+id/tv_Username"
        android:layout_centerVertical="true"
        android:text="Password:"
        android:textStyle="italic"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_Username"
        android:layout_alignStart="@+id/et_Username"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHighlight="#00ace6"/>

    <Button
        android:id="@+id/bt_SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:text="Sign in"
        android:background="#800000"
        android:width="150dp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_Username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        app:srcCompat="@drawable/paypal"
        android:background="#FFFFFF"/>

</RelativeLayout>